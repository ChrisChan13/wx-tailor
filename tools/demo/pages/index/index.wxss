.container {
  width: 100vw;
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  padding-top: 100rpx;
}

image {
  width: 400rpx;
  height: 400rpx;
  display: block;
  border: 1px solid #DFDFDF;
}

text {
  font-size: 30rpx;
  margin: 10rpx 0 50rpx 0;
  color: #808080;
}

button {
  width: 300rpx;
  font-size: 34rpx;
  color: #333333;
}
